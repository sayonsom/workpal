{
  "meta": {
    "name": "workpal-slack-like-theme",
    "version": "1.0.0"
  },
  "colors": {
    "background": "#FFFFFF",
    "backgroundSubtle": "#F8F8F8",
    "textPrimary": "#1D1C1D",
    "textSubtle": "rgba(29,28,29,0.70)",
    "textMuted": "rgba(29,28,29,0.55)",
    "link": "#1264A3",
    "linkHover": "#0B4C8C",
    "brandAubergine": "#3F0E40",
    "ctaGreen": "#007A5A",
    "ctaGreenHover": "#006B4F",
    "danger": "#E01E5A",
    "warning": "#ECB22E",
    "info": "#1D9BD1",
    "success": "#2BAC76",
    "borderLight": "rgba(29,28,29,0.13)",
    "borderStrong": "rgba(29,28,29,0.20)"
  },
  "typography": {
    "fontFamily": "Lato, ui-sans-serif, system-ui, -apple-system, Segoe UI, Roboto, Helvetica, Arial, sans-serif",
    "fontFamilyMono": "ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas, monospace",
    "body": { "size": "15px", "lineHeight": "1.4", "weight": "400" },
    "caption": { "size": "12px", "lineHeight": "1.4", "weight": "400" },
    "button": { "size": "15px", "lineHeight": "1.2", "weight": "700" }
  },
  "radii": { "sm": "6px", "md": "8px", "pill": "999px" },
  "shadows": {
    "sm": "0 1px 2px rgba(0,0,0,0.08)",
    "md": "0 6px 16px rgba(0,0,0,0.12)"
  },
  "motion": {
    "fast": "120ms",
    "normal": "180ms",
    "slow": "240ms",
    "easing": "cubic-bezier(0.2, 0, 0, 1)"
  }
}
